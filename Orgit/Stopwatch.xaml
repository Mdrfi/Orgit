        <Label x:Name="sslbl" Content="00" Foreground="#e3e3e3" FontSize="150" HorizontalAlignment="Center" VerticalAlignment="Center" Height="200" Width="200" Margin="557,163,223,317" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0"/>
        <Label x:Name="dot" Content=":" FontSize="150" HorizontalAlignment="Center" VerticalAlignment="Center" Height="200" Width="72" Margin="322,151,586,329" Foreground="#FFE3E3E3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" ScrollViewer.CanContentScroll="True"/>
        <Label x:Name="dot_Copy" Content=":" FontSize="150" HorizontalAlignment="Center" VerticalAlignment="Center" Height="200" Width="72" Margin="522,151,386,329" Foreground="#FFE3E3E3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" ScrollViewer.CanContentScroll="True"/>
    </Grid>
</Page>
