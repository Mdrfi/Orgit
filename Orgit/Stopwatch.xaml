        <Button x:Name="startbtn"  HorizontalAlignment="Center" Width="140" Height="140"  BorderBrush="{x:Null}" Click="startbtn_Click" Background="{x:Null}" Margin="445,422,395,0" VerticalAlignment="Top">
            <Image x:Name="startimg" Source="http://s9.picofile.com/file/8329462184/playbtn.png" Height="100" Width="100"/>
        </Button>
        <Button x:Name="resetbtn"  HorizontalAlignment="Center"  VerticalAlignment="Top" Width="80" Height="80" Margin="321,461,579,0" BorderBrush="{x:Null}" Background="{x:Null}" Click="resetbtn_Click">

            <Image Source="http://s9.picofile.com/file/8329462518/reload.png" Height="50" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        </Button>
        <Label x:Name="hhlbl" Content="00" Foreground="#e3e3e3" FontSize="150" HorizontalAlignment="Center" VerticalAlignment="Center" Height="200" Width="200" Margin="157,163,623,317" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0"/>
